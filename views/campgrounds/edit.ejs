<% include ../partials/header %>

<div class="form-page">

  <div class="form-nav">
    <a href="/campgrounds/<%= campground._id %>" class="ui black button"><i class="angle double left icon"></i>Go Back</a>
  </div>


  <div class="yelp-general-form">
    <h1>Edit <%= campground.name %></h1>
    <form class="ui form" action="/campgrounds/<%= campground._id  %>/?_method=PUT" method="POST">
      <div class="field">
        <label>Name</label>
        <input type="text" name="campground[name]" value="<%= campground.name %>">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="campground[image]" value="<%= campground.image %>">
      </div>
      <div class="field">
        <label>Price</label>
        <input type="text" name="campground[price]" value="<%= campground.price %>">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="campground[description]"><%= campground.description %></textarea>
      </div>
      <button class="ui orange button" type="submit">Submit</button>
    </form>
  </div>
</div>


<% include ../partials/footer %>
