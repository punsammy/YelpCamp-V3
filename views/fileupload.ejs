<% include ./partials/header %>
<div class="form-page">
  <form class="ui form" action="/files/upload" method="post" enctype="multipart/form-data">
    <div class="field">
      <h1>Upload a File!</h1>
      <input type="file" name="testfile">
      <button class="ui orange button">Submit</button>
    </div>
  </form>

  <div class="button-container">
    <ul>
      <h2>Files:</h2>
      <% files.forEach(function(file){ %>
        <li>
          <a href="./download/<%= file.name %>" class="ui small yellow button"><%= file.name %></a>
        </li>
        <br>
      <% }) %>
    </ul>
  </div>

</div>

<% include ./partials/footer %>
