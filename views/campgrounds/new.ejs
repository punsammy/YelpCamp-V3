<% include ../partials/header %>

<div class="form-page">

  <div class="form-nav">
    <a href="/campgrounds" class="ui orange button"><i class="angle double left icon"></i>Go Back</a>
  </div>


  <div class="yelp-general-form">
    <h1>Create a New Campground</h1>
    <form class="ui form" action="/campgrounds" method="POST">
      <div class="field">
        <label>Name</label>
        <input type="text" name="name" placeholder="Name">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="image" placeholder="Image Url">
      </div>
      <div class="field">
        <label>Price Per Night</label>
        <input type="text" name="price" placeholder="Price">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="description" placeholder="Description"></textarea>
      </div>
      <button class="ui orange button" type="submit">Submit</button>
    </form>
  </div>
</div>


